<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Foody" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationView</item>

    </style>


    // Splash Screen Style
    <style name="SplashScreenStyle" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item> // this for transparent the status
        <item name="android:windowTranslucentNavigation">true</item> // this for transparent the down mobile bar
    </style>


    // Action Bar style
    <style name="CustomActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/actionBarBackgroundColor</item>

    </style>

    // custom style for chips
    <style name="CustomStyleChips" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>

    // style for tool bar for details activity
    <style name="DetailsActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/dark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">@color/dark</item>
    </style>

    // custom style for tab layouts-->
    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="background">@color/dark</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>

    </style>

    // custom style foe tap layout text-->
    <style name="CustomTapTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>

    // custom style for bottom navigation
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
    <item name="backgroundTint">@color/bottomNavBackground</item>
    <item name="itemIconTint">@color/bottom_nav_item_color</item>
    <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>
</resources>